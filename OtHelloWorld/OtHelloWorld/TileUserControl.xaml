<UserControl x:Name="TileUC" x:Class="OtHelloWorld.TileUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OtHelloWorld"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">

    <Grid Background="DarkGreen">
        <Border BorderBrush="LightYellow" BorderThickness="1,1,1,1"></Border>
        <Label x:Name="LabelName" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" Foreground="White"></Label>
    </Grid>
</UserControl>
