<UserControl x:Name="TileUC" x:Class="OtHelloWorld.TileUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OtHelloWorld"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="70" MinWidth="70" MinHeight="70" Width="70" Height="70">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="images/tileBG.jpg"/>
        </Grid.Background>
        <Border BorderBrush="LightYellow" BorderThickness="1,1,1,1"></Border>
        <Label x:Name="PawnLbl" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="14" FontWeight="Bold" Foreground="White" Margin="5" MinWidth="60" MinHeight="60"></Label>
    </Grid>
</UserControl>
